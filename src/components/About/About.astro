---
import './About.css';
import { Section, CodeBlock } from '@components/ui';

import bugCatcher from '@images/bug-catcher.svg';

import Skills from './Skills.astro';

export interface Props {
  sectionId: string;
}

const { sectionId } = Astro.props;

const title = 'About';
const subtitle = 'Something you should know about me';

const aboutMe =
  'Lorem ipsum dolor sit amet consectetur. Varius lacus mauris pharetra tellus nulla mi curabitur. Tristique semper lorem vitae proin ornare urna in non. Purus nibh maecenas lacinia vitae aliquam erat. In feugiat lorem nec ornare viverra et ultrices a. Nec porttitor amet vel maecenas diam hac. Suspendisse eros sed morbi suspendisse.';
---

<Section sectionId={sectionId} title={title} subtitle={subtitle}>
  <div class="about-container">
    <div class="about">
      <CodeBlock value={aboutMe} />
      <div class="about__image">
        <img src={bugCatcher} alt="Photo of me catching bugs." />
        <label>A photo of me while catching bugs in the code.</label>
      </div>
    </div>
    <Skills />
  </div>
</Section>
