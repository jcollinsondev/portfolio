---
import './About.css';
import { Section, CodeBlock } from '@components/ui';

import bugCatcher from '@images/bug-catcher.svg';

import Skills from './Skills.astro';

export interface Props {
  sectionId: string;
}

const { sectionId } = Astro.props;

const title = 'About';
const subtitle = 'Something you should know about me';

const aboutMe =
  'Passionate full stack developer, I love to inspire other people around me and be inspired by them. Strong attention to detail but also pragmatic.';
---

<Section sectionId={sectionId} title={title} subtitle={subtitle}>
  <div class="about-container">
    <div class="about">
      <CodeBlock value={aboutMe} />
      <div class="about__image">
        <img src={bugCatcher} alt="Photo of me catching bugs." />
        <label>A photo of me while catching bugs in the code.</label>
      </div>
    </div>
    <Skills />
  </div>
</Section>
